{
    "compilerOptions": {
      "outDir": "./dist",            // Output directory for compiled files
      "rootDir": "./src",            // Root directory for source files
      "target": "ES6",               // ECMAScript target version
      "module": "ES6",               // Use ES6 module system
      "moduleResolution": "node",    // Node module resolution
      "strict": true,                // Enable strict type-checking options
      "esModuleInterop": true,       // Enable interoperability between CommonJS and ES modules
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,              // Generate source maps for debugging
      "types": ["node"], // Include Node.js type definitions
      "lib": ["ES6", "DOM"], // Include DOM for browser types
      "typeRoots": ["node_modules/@types"] // Specify where type definitions are located
    },
    "include": ["src/**/*.ts", "src/libp2p-setup.js", "src/demo.ts"],      // Include all TypeScript files in /src
    "exclude": ["node_modules"]      // Exclude dependencies
}